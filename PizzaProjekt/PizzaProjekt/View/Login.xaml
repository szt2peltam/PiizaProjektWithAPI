<Window x:Class="PizzaProjekt.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PizzaProjekt.View"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <StackPanel>
        
        
        
        <TextBlock 
                   Text="Felhasználónév: " 
                   Width="90px" Height="20px"  ></TextBlock>
        
        
        <TextBox   x:Name="Name"
            Height="20px"
                 Width="300px"></TextBox>
        
        <TextBlock  
            Text="Jelszó:"
                   Width="50px"
                   Height="20px"></TextBlock>
        <TextBox  
            Height="20px"
                  x:Name="Password"
                 Width="300px"
                 ></TextBox>

        <Button  
            Width="100px"
                Height="20px"
                Click="Button_Click">
                Bejelentkezés
        </Button>

        <TextBlock x:Name="ResponseText"></TextBlock>
    </StackPanel>
</Window>
