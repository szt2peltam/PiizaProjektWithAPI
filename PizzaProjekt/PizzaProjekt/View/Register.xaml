<Window x:Class="PizzaProjekt.View.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PizzaProjekt.View"
        mc:Ignorable="d"
        Title="Register" Height="450" Width="800">
    <StackPanel>
        <TextBlock Text="Felhasználónév:"></TextBlock>
        <TextBox x:Name="NameInput"></TextBox>
        <TextBlock Text="Jelszó:"></TextBlock>
        <TextBox x:Name="PasswordInput"></TextBox>
        <Button Click="RegisterUser">Regisztráció</Button>
        <Button Click="BackToLogin" Margin="0 10 0  0">Vissza a bejelentkezéshez</Button>

        <TextBlock x:Name="Warning"></TextBlock>
        
    </StackPanel>
</Window>
